<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/show1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/bluescreen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="欢迎使用蓝牙搜索APP"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff0b18c0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单击按钮以搜索蓝牙设备"
            android:id="@+id/button"
            android:onClick="onClick_Search"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff1919c0"
            />

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Large.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示RSSI"
            android:id="@+id/Rssi"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/lvDevices"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#f1f1f1"
                android:cacheColorHint="#ff333333"
                android:fadingEdge="none"
                android:scrollbars="none" >
            </ListView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取第一个设备的RSSI"
        android:id="@+id/RSSIbutton1"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff1919c0"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取第二个设备的RSSI"
        android:id="@+id/RSSIbutton2"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff1919c0"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
       />
    </LinearLayout>
</RelativeLayout>
